@model TextCorpusMVC.Models.TextToUpload

@{
    ViewBag.Title = "Create";
}

<h2>Добавить текст</h2>


@using (Html.BeginForm("Create", "Text", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Название</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Текст</label>
            <div class="col-md-4">
                <textarea name="Txt" id="Txt" rows="10" cols="100" class="form-control"></textarea>
                @Html.ValidationMessageFor(model => model.Txt, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <input type="file" name="TextFile" id="TextFile" value="Загрузить файл" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Аннотация</label>
            <div class="col-md-4">
                <textarea name="Annotation" id="Annotation" rows="10" cols="100" class="form-control"></textarea>
                @Html.ValidationMessageFor(model => model.Annotation, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">

                <input type="file" name="AnnotationFile" id="AnnotationFile" value="Загрузить файл" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
