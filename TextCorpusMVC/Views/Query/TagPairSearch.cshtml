@model TextCorpusMVC.Models.PairQuery
@{
    ViewBag.Title = "LemmaPairSearch";
}

<div>
    <h2>Поиск пар тегов</h2>

    @using (Ajax.BeginForm("TagPairSearch", new AjaxOptions { UpdateTargetId = "results" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p class="control-label col-md-2">Первый тег</p>
                <div class="col-md-10">
                    @Html.ListBoxFor(model => model.First, (SelectList)ViewBag.Tagnames, htmlAttributes: new { style = "width: 100%", @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.First, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <p class="control-label col-md-2">Второй тег</p>
                <div class="col-md-10">
                    @Html.ListBoxFor(model => model.Second, (SelectList)ViewBag.Tagnames, htmlAttributes: new { style = "width: 100%", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Second, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <p class="control-label">Расстояние от</p>
                </div>
                <div class="col-md-1">
                    @Html.EditorFor(model => model.MinRange, new { htmlAttributes = new { type = "number", min = "0", max = "100", value = "1", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MinRange, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-1">
                    <p class="control-label" style="text-align :center">до</p>
                </div>
                <div class="col-md-1">

                    @Html.EditorFor(model => model.MaxRange, new { htmlAttributes = new { type = "number", min = "0", max = "100", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaxRange, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Поиск" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div class="form-group" id="results"></div>
</div>
@Scripts.Render("~/scripts/jquery-3.4.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
